    <select id="selectCategories" resultMap="categories">
        SELECT
        a.id, a.level_id, a.hf_name, GROUP_CONCAT(b.hf_name, ':', b.id) child_categories
        FROM
        hf_category a
        LEFT JOIN
        (SELECT id, hf_name, parent_category_id FROM hf_category) b
